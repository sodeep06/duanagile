@model duanagile.Models.FoodItem

<h2>Add New Food Item</h2>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" name="Price" value="@Model.Price" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" name="Category" value="@Model.Category" />
    </div>
    <button type="submit" class="btn btn-success">Add Food Item</button>
</form>
