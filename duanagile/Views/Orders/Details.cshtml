@model duanagile.Models.Order

<h2>Chi tiết đơn hàng: @Model.OrderID</h2>

<p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy")</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.FoodItem.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price / detail.Quantity:C</td>
                <td>@detail.Price:C</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng tiền:</strong> @Model.OrderDetails.Sum(od => od.Price):C</p>
@{
    Layout = null;
}