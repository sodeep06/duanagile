@model IEnumerable<duanagile.Models.FoodItem>



@{
    ViewData["Title"] = "Tìm kiếm Sản Phẩm";
}

<h1>@ViewData["Title"]</h1>
    <a ~href="index.html" id="logo"><img src="images/logo.gif" alt=""></a>
    <ul>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Register">Dang Ky</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="FoodItem" asp-action="Search">Sản Phẩm</a>
                </li>
            </ul>
        </div>
<!-- Form tìm kiếm -->
<form method="get" action="@Url.Action("Search", "FoodItem")">
    <div>
        <label for="name">Tên Sản Phẩm</label>
        <input type="text" name="name" id="name" placeholder="Nhập tên món ăn" />
    </div>
    <div>
        <label for="minPrice">Giá tối thiểu</label>
        <input type="number" name="minPrice" id="minPrice" placeholder="Giá tối thiểu" />
    </div>
    <div>
        <label for="maxPrice">Giá tối đa</label>
        <input type="number" name="maxPrice" id="maxPrice" placeholder="Giá tối đa" />
    </div>
    <div>
        <label for="category">Thể loại</label>
        <select name="category" id="category">
            <option value="">Tất cả</option>
                <option value="Dạng sữa">Dạng sữa</option>
                <option value="Dạng kem">Dạng kem</option>
                <option value="Dạng gel">Dạng gel</option>
                <option value="Nâng tone">Nâng tone</option>
        </select>
    </div>
    <button type="submit">Tìm kiếm</button>
</form>
    <div class="container">
        <main role="main" class="pb-3">
        @RenderBody()
        </main>
 <!-- Hiển thị kết quả tìm kiếm -->
  @if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Giá</th>
                <th>Thể Loại</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không tìm thấy sản phẩm nào.</p>
}  
