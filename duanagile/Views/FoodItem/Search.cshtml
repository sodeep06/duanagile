        border: 1px solid #ddd;
    }

    .search-form button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
    }

    .search-form button:hover {
        background-color: #0056b3;
    }

    table {
        width: 100%;
        margin-top: 30px;
