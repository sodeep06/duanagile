    Layout = null;
}

<h2>@Model.Name</h2>

<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Giá:</strong> @Model.Price VND</p>
<p><strong>Danh mục:</strong> @Model.Category</p>
<p><strong>Thành phần:</strong> @Model.Ingredients</p>

<img src="@Model.ImageURL" alt="@Model.Name" style="max-width: 100%; height: auto;" />

